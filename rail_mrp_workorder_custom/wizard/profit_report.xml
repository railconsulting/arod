<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form-->
    <record id="profit_report_wizard" model="ir.ui.view">
        <field name="name">profit.report.wizard.form</field>
        <field name="model">sale.profit.report</field>
        <field name="arch" type="xml">
            <form string="Reporte de rentabilidad">
                <group string="General">
                    <group>
                        <field name="date_from" string="Desde"/>
                        <field name="date_to" string="Hasta"/>
                    </group>
                    <group>
                        <field name="company_id" readonly="1"/>
                        <field name="currency_ids" widget="many2many_tags"/>
                        <field name="branch_ids" widget="many2many_tags"/>
                        <field name="dev_factor"/>
                    </group>
                </group>
                <group string="Productos">
                    <group>
                        <field name="categ_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group string="Ventas">
                    <group>
                        <field name="partner_tags" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="user_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="name" invisible="1"/>
                        <label for="xls_file" string="Desgargar XLS" attrs="{'invisible':[('xls_file','=',False)]}"/>
                        <field nolabel="1" name="xls_file" readonly="1" filename="name"/>
                    </group>
                </group>
                <footer>
                    <button name="download_xls" string="Descargar" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Salir" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="profit_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Reporte de rentabilidad</field>
        <field name="res_model">sale.profit.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="sale_profit_report_wizard_menu"
        name="Reporte de rentabilidad"
        action="profit_report_wizard_action"
        parent="account.account_reports_legal_statements_menu"/>
</odoo>