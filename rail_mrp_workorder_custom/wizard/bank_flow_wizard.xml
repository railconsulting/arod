<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form-->
    <record id="bank_flow_wizard" model="ir.ui.view">
        <field name="name">bank.flow.wizard.form</field>
        <field name="model">bank.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Flujo de bancos">
                <group>
                    <group>
                        <field name="date_from" string="Desde"/>
                        <field name="journal_ids" string="Bancos" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="date_to" string="Hasta"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                </group>
                <group>
                    <group>
                        <label for="xls_file" string="Desgargar XLS" attrs="{'invisible':[('xls_file','=',False)]}"/>
                        <field nolabel="1" name="xls_file" readonly="1" filename="name"/>
                    </group>
                </group>
                <footer>
                    <button name="download_xls" string="Descargar" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Salir" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="bank_flow_wizard_action" model="ir.actions.act_window">
        <field name="name">Reporte flujo de bancos</field>
        <field name="res_model">bank.flow.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="bank_flow_wizard_menu"
        name="Reporte flujo de bancos"
        action="bank_flow_wizard_action"
        parent="account.account_reports_legal_statements_menu"/>
</odoo>