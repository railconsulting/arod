<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form-->
    <record id="expenses_report_wizard" model="ir.ui.view">
        <field name="name">expenses.report.wizard.form</field>
        <field name="model">expenses.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Tabla de gastos">
                <group>
                    <group>
                        <field name="date_from" string="Desde"/>
                        <field name="company_id" />
                    </group>
                    <group>
                        <field name="date_to" string="Hasta"/>
                        <field name="branch_id"/>
                    </group>
                </group>
                <group>
                    <group>
                        <label for="xls_file" string="Desgargar XLS" attrs="{'invisible':[('xls_file','=',False)]}"/>
                        <field nolabel="1" name="xls_file" readonly="1" filename="name"/>
                    </group>
                </group>
                <footer>
                    <button name="download_xls" string="Descargar" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Salir" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="expenses_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Tabla de gastos</field>
        <field name="res_model">expenses.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="expenses_report_wizard_menu"
        name="Tabla de gastos"
        action="expenses_report_wizard_action"
        parent="account.account_reports_legal_statements_menu"/>
</odoo>