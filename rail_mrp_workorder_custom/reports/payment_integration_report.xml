<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--Report action-->
    <record id="payment_integration_report" model="ir.actions.report">
        <field name="name">Integracion contable pagos</field>
        <field name="model">payment.integration.moves</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">rail_mrp_workorder_custom.payment_integration_document</field>
    </record>
    <template id="payment_integration_document">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <t t-set="total_debit" t-value="0.0"/>
                    <t t-set="total_credit" t-value="0.0"/>
                    <div class="row">
                        <strong>INTEGRACION CONTABLE DEL PAGO: <span t-esc="payment"/></strong>
                    </div>
                    <table width="100%" style="border: white solid 0px;">
                        <thead>
                            <tr>
                                <th>NOMBRE</th>
                                <th>CUENTA</th>
                                <th>DEBE</th>
                                <th>HABER</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="subtotal_debit" t-value="0"/>
                            <t t-set="subtotal_credit" t-value="0"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="subtotal_debit" t-value="subtotal_debit + line['debit']"/>
                                <t t-set="subtotal_credit" t-value="subtotal_credit + line['credit']"/>
                                <t t-set="move_name" t-value=""/>
                                <tr t-att-class="'bg-200 fw-bold o_line_section' if line['display_type'] == 'line_section' else 'fst-italic o_line_note' if line['display_type'] == 'line_note' else ''">
                                    <t t-if="not line['display_type']">
                                        <td style="font-size: 10px; text-align: left;"><span t-esc="line['name']"/></td>
                                        <td style="font-size: 10px; text-align: left;"><span t-esc="line['account_id']"/></td>
                                        <td style="font-size: 10px; text-align: right;"><span t-esc="line['debit']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></td>
                                        <td style="font-size: 10px; text-align: right;"><span t-esc="line['credit']" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/></td>
                                    </t>
                                    <t t-elif="line['display_type'] == 'line_section'">
                                        <t t-set="move_name" t-value="line['name']"/>
                                        <td name="td_section_line" colspan="99">
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="subtotal_debit" t-value="0"/>
                                        <t t-set="subtotal_credit" t-value="0"/>
                                    </t>
                                </tr>
                                <t t-if="current_section and (line_last or lines[line_index+1]['display_type'] == 'line_section')">
                                    <tr class="is-subtotal text-end">
                                        <td name="td_section_subtotal" colspan="2"  style="text-align: center;">
                                            <strong>TOTAL <span t-esc="move_name"/></strong>
                                        </td>
                                        <td  style="text-align: right;">
                                          <span t-esc="subtotal_debit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}" />
                                        </td>
                                        <td  style="text-align: right;">
                                          <span t-esc="subtotal_credit" t-options="{&quot;widget&quot;: &quot;float&quot;, &quot;precision&quot;: 2}"/>  
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>


</odoo>
