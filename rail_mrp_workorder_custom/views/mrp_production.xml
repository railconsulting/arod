<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="rail_costing_preview_tab" model="ir.ui.view">
        <field name="name">rail.costing.preview.tab</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[last()]" position="after">
                <page id="costing_preview" string="Pre-costeo">
                    <group>
                        <group string="Materiales">
                            <field name="move_raw_ids">
                                <tree create="0" edit="0" delete="0">
                                    <field name="product_id"/>
                                    <field name="price_unit"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Mano de obra">
                            <field name="workorder_ids">
                                <tree create="0" edit="0" delete="0">
                                    <field name="workcenter_id"/>
                                    <field name="product_id"/>
                                    <field name="duration_expected"/>
                                    <field name="duration"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                    <group string="Resumen">
                        <group>
                            <field name="total_material_cost"/>
                        </group>
                        <group>
                            <field name="total_labour_emp_cost"/>
                        </group>
                        <group>
                            <field name="total_labour_wo_cost"/>
                        </group>
                        <group>
                            <h4>
                                <field name="total_cost"/>
                            </h4>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>