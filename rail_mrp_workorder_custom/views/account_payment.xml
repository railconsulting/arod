<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_entries_stat_form" model="ir.ui.view">
        <field name="name">tax.entries.stat.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="button_open_tax_entries" type="object" class="oe_stat_button" icon="fa-university" groups="account.group_account_user,account.group_account_readonly">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Impuestos</span>
                    </div>
                </button>
                <button name="button_open_exhange_diff" type="object" class="oe_stat_button" icon="fa-money" groups="account.group_account_user,account.group_account_readonly">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Dif. Cambiario</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="button_payment_integration_moves" string="Integracion contable" type="object"/>
            </xpath>
        </field>
    </record>
</odoo>