<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Settings-->
    <record id="res_config_settings_account_payroll" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.payroll</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" title="Fields required to accounting configuration.">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Asiento contable</span>
                        <div class="text-muted">
                            Configura el tipo de asiento contable.
                        </div>
                        <div class="row mt16">
                            <label for="entry_type" class="col-lg-3 o_light_label"/>
                            <field name="entry_type"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>