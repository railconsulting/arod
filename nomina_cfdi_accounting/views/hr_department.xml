<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Adding Account fields to the Department -->
  <record id="hr_department_salary_account_form" model="ir.ui.view">
      <field name="name">hr.department.salary.account.form</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <xpath expr="/form/sheet/group[1]" position="after">
              <field name="account_ids" widget="section_and_note_one2many" nolabel="1">
                  <tree editable="bottom">
                      <control>
                          <create name="add_line_control" string="Agregar linea"/>
                          <create name="add_section_control" string="Agregar seccion" context="{'default_display_type': 'line_section'}"/>
                      </control>
                      <field name="display_type" invisible="1"/>
                      <field name="sequence" widget="handle"/>
                      <field name="rule_id" attrs="{'required':[('display_type','=',False)]}" string="Regla"/>
                      <field name="debit_account_id" attrs="{'required':[('display_type','=',False)]}"/>
                      <field name="credit_account_id" attrs="{'required':[('display_type','=',False)]}"/>
                      <field name="name" widget="section_and_note_text"  optional="show"/>
                  </tree>
              </field>
          </xpath>
      </field>
  </record>
</odoo>