<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="kardex.reporte_kardex">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                        <h2>Kardex</h2>
                        
                        <!-- Iterate over the list of dictionaries -->
                        <t t-foreach="lines" t-as="line">
                            <div class="row" style="color:blue;">
                                <b>Producto: <t t-esc="line['product_name']"/></b>
                            </div>
                            <table width="100%">
                                <thead style="font-size: 12px;">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Transaccion</th>
                                        <th>Venta / Compra</th>
                                        <th>Factura</th>
                                        <th>Empresa</th>
                                        <th>Tipo</th>
                                        <th>UdM</th>
                                        <th>Ubicacion</th>
                                        <th>Entradas</th>
                                        <th>Salidas</th>
                                        <th>Traslados</th>
                                        <th>Final</th>
                                        <th groups="kardex.groups_view_cost_price">Costo</th>
                                        <th groups="kardex.groups_view_cost_price">Total</th>
                                    </tr>
                                </thead>
                                <tbody style="font-size: 10px;">
                                    <t t-foreach="line['lines']" t-as="l">
                                        <tr>
                                            <td><span t-esc="l['date'].strftime('%d/%m/%Y %H:%M')"/></td>
                                            <td><span t-esc="l['document']"/></td>
                                            <td><span t-esc="l['order_id']"/></td>
                                            <td><span t-esc="l['invoice_id']"/></td>
                                            <td><span t-esc="l['company']"/></td>
                                            <td><span t-esc="l['type']"/></td>
                                            <td><span t-esc="l['uom']"/></td>
                                            <td><span t-esc="l['location']"/></td>
                                            <td><span t-esc="l['in']"/></td>
                                            <td><span t-esc="l['out']"/></td>
                                            <td><span t-esc="l['transfer']"/></td>
                                            <td><span t-esc="l['balance']"/></td>
                                            <td groups="kardex.groups_view_cost_price"><span t-esc="l['cost']"/></td>
                                            <td groups="kardex.groups_view_cost_price"><span t-esc="l['balance'] * l['cost']"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

