<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="aprrovals_vendor_bill_urbanos_inherit" model="ir.ui.view">
        <field name="name">approvals.vendor.bill.urbanos.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_register_payment']" position="replace">
                <button name="action_register_payment" id="account_invoice_payment_btn" type="object" class="oe_highlight" attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'out_receipt', 'in_receipt'))]}" context="{'dont_redirect_to_payments': True}" string="Registrar Pago" data-hotkey="g" groups="account.group_account_invoice"/>
            </xpath>
        </field>
    </record>
</odoo>