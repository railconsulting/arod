<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="aprrovals_vendor_bill_arod_form" model="ir.ui.view">
        <field name="name">approvals.vendor.bill.urbanos.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/div[4]" position="attributes">
                <attribute name="attrs">
                     {'invisible': ['|', '|', '|', ('approval_state','!=','approved'),('move_type', '!=', 'in_invoice'), ('invoice_has_outstanding', '=', False), ('payment_state', 'not in', ('not_paid', 'partial'))]}
                </attribute>
            </xpath>
            <xpath expr="//label[@for='partner_id'][1]" position="before">
                <field name="approval_state" widget="badge" nolabel="1" 
                    decoration-danger="approval_state == 'rejected'" 
                    decoration-warning="approval_state == 'to_approve'" 
                    decoration-success="approval_state == 'approved'"
                    attrs="{'invisible':[('move_type','!=', 'in_invoice')]}"    
                />
                <label for="approval_state" string="" attrs="{'invisible':[('move_type','!=', 'in_invoice')]}"/>
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="replace">
                <button 
                    name="action_register_payment" 
                    id="account_invoice_payment_btn" 
                    type="object" class="oe_highlight" 
                    attrs="{'invisible': ['|', '|',  ('approval_state','!=', 'approved'),('state', '!=', 'posted'), ('payment_state', 'not in', ['not_paid', 'partial'])]}" 
                    context="{'dont_redirect_to_payments': True}" string="Registrar Pago" data-hotkey="g" groups="account.group_account_invoice"/>
            </xpath>
            <xpath expr="//field[@name='invoice_outstanding_credits_debits_widget']" position="attributes">
                <attribute name="attrs">
                    {'invisible': ['|','|',('approval_state','!=','approved'),('state', '!=', 'posted'), ('move_type', 'in', ('out_receipt', 'in_receipt'))]}
                </attribute>
            </xpath>
        </field>
    </record>
    <record id="approvals_vendor_bill_arod_tree" model="ir.ui.view">
        <field name="name">approvals.vendor.bill.arod.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <button name="action_register_payment" position="replace">
                <button 
                    name="action_register_payment" 
                    type="object" 
                    string="Registrar pago" 
                    groups="account.group_account_user" 
                    invisible="context.get('default_move_type') not in ('out_invoice', 'out_refund', 'out_receipt', 'in_refund','in_receipt')"/>
            </button>
  
            <field name="payment_state" position="after">
                <field name="approval_state" widget="badge"
                    decoration-danger="approval_state == 'rejected'" 
                    decoration-warning="approval_state == 'to_approve'" 
                    decoration-success="approval_state == 'approved'"
                    optional="show" invisible="context.get('default_move_type') != 'in_invoice'"/>
            </field>
        </field>
    </record>

    <record id="action_bill_request_approval" model="ir.actions.server">
        <field name="name">Solicitar pagos</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="code">
            records.request_aproval()
        </field>
    </record>
</odoo>