<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_mx_edi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <h2 attrs="{'invisible': [('country_code', '!=', 'MX')]}">Contabilidad Complementaria</h2>
                <div class="row mt16 o_settings_container" id="rail_complementary_accounting_settings" attrs="{'invisible': [('country_code', '!=', 'MX')]}">
                    <div class="col-12 col-lg-6 o_setting_box" title="Permite cambiar la logica contable en distintas monedas">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Contabilidad complementaria</span>
                            <div class="text-muted">
                                Permite el registro de lineas complementarias, manteniendo el monto en moneda original en monedas extranjeras como USD, EUR, etc.
                            </div>
                            <div class="row mt16">
                                <label for="complementary_accounting" class="col-lg-3 o_light_label"/>
                                <field name="complementary_accounting"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
