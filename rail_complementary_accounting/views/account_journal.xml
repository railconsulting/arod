<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="journal_complementary_account_form" model="ir.ui.view">
        <field name="name">journal.complementary.account.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced_settings']/group[1]" position="inside">
                <group name="complementary_accounting" string="Asientos complementarios">
                    <field name="complementary_entry"/>
                    <field name="complementary_account_id" attrs="{'invisible':[('complementary_entry','=',False)],'required':[('complementary_entry','=',True)]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>