<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="currency_complementary_form" model="ir.ui.view">
        <field name="name">currency.complementary.form</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_subunit_label']" position="after">
                <field name="complementary_currency" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//notebook[hasclass('o_currency_rate_list')]" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('is_current_company_currency','=',True),('complementary_currency','=',True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>