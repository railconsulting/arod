<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="complementary_account_move_form" model="ir.ui.view">
        <field name="name">complementary.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <div class="d-flex" attrs="{'invisible':['|',('move_type','!=','in_invoice'),('complementary_entry','=',False)]}">
                    <label for="complementary_entry" string="Asiento complementario"/>
                    <field name="complementary_entry" widget="boolean_toggle"/>
                    <span class="oe_inline o_form_label mx-3" > Tipo cambio: </span>
                    <field name="manual_rate"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>