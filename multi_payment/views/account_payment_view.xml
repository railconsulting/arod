<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="account_payment_form_inherited" model="ir.ui.view">
            <field name="name">account.payment.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr='//sheet' position="inside">
                    <button 
                        name="refresh_invoice" 
                        type="object" 
                        string="Refresh" 
                        class="oe_highlight oe_right" 
                        attrs="{'invisible': ['|',('batch_reconcile','=',False),('state', '!=', 'draft')]}"
                    />
                    <field name="available_partner_bank_ids" widget="many2many_tags"/>
                    <separator string="Invoices"
                               attrs="{'invisible': ['|', '|', ('batch_reconcile','=',False),('payment_type', 'not in', ['inbound', 'outbound']), ('partner_type', 'not in', ['customer', 'supplier'])]}"/>
                    <field name="payment_invoice_ids"
                           attrs="{'invisible': ['|', '|', ('batch_reconcile','=',False),('payment_type', 'not in', ['inbound', 'outbound']), ('partner_type', 'not in', ['customer', 'supplier'])]}">
                        <tree create="false" editable="bottom">
                            <field name="invoice_id" readonly="1" force_save="1"/>
                            <field name="origin"/>
                            <field name="date_invoice"/>
                            <field name="date_due"/>
                            <field name="amount_total"/>
                            <field name="residual"/>
                            <field name="reconcile_amount" attrs="{'readonly': [('payment_state', '!=', 'draft')]}"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_state" invisible="1"/>
                        </tree>
                    </field>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="batch_reconcile" widget="boolean_toggle" attrs="{'invisible':[('is_internal_transfer','=', True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>