<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="account.AccountPaymentField" t-inherit="account.AccountPaymentField" t-inherit-mode="primary" owl="1">
        <xpath expr="//a[hasclass('outstanding_credit_assign')]/.." position="before">
            <td>
                <a title="partial reconcile"
                    role="button"
                    class="oe_form_field btn btn-secondary o_partial_button"
                    t-att-data-id="line.id"
                    t-att-data-move_id="line.move_id"
                    style="margin-right: 0px; padding-left: 5px; padding-right: 5px;"
                    href="#"
                    t-on-click.prevent="() => this.partialOutstandingCredit(line.id)"
                    data-toggle="tooltip">Aplicar parcial</a>
                </td>
        </xpath>
    </t>
</templates>
