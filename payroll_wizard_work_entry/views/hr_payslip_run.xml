<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Hr Payslip Run Form-->
    <record id="work_entry_wizard_payslip_run_form" model="ir.ui.view">
        <field name="name">work.entry.wizard.payslip.run.form</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(payroll_wizard_work_entry.variable_wizard_action)d"
                        string="Editar variables"
                        type="action"
                        context="{'default_payslip_run_id': id}"
                />
                <button name="%(payroll_wizard_work_entry.workentry_wizard_action)d"
                        string="Editar dias/horas"
                        type="action"
                        context="{'default_payslip_run_id': id}"
                />
            </xpath>
        </field>
    </record>
</odoo>