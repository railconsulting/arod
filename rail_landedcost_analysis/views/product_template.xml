<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_custom_landed_cost_form" model="ir.ui.view">
        <field name="name">product.template.landed.cost.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="apply_dai"/>
                    <label for="apply_dai"/>
                </div>
            </div>
            <xpath expr="//notebook/page[@name='general_information']/group/group/div[@name='standard_price_uom']" position="after">
                <field name="dai" attrs="{'invisible':[('apply_dai','=',False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>