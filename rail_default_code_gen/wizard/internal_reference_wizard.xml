<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="internal_reference_wizard_form_view" model="ir.ui.view">
        <field name="name">internal.reference.wizard.form.view</field>
        <field name="model">internal.reference.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Internal Reference">
                <group>
                    <group>
                        <field name="replace_existing" />
                    </group>
                </group>
                <footer>
                    <button string="Generate" name="action_generate_reference" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_internal_reference_wizard" model="ir.actions.act_window">
        <field name="name">Generate Internal Reference</field>
        <field name="res_model">internal.reference.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="internal_reference_wizard_form_view" />
        <field name="target">new</field>
    </record>
    <record id="auto_generate_int_ref_action" model="ir.actions.act_window">
        <field name="name">Auto Generate Internal Reference</field>
        <field name="res_model">internal.reference.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_product" />
        <field name="binding_view_types">list</field>
    </record>
    <record id="auto_generate_int_ref_action_product_template" model="ir.actions.act_window">
        <field name="name">Auto Generate Internal Reference</field>
        <field name="res_model">internal.reference.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="product.model_product_template" />
        <field name="binding_view_types">list</field>
    </record>
</odoo>
