<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_setting_form_view" model="ir.ui.view">
        <field name="name">res.config.setting.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='barcode_setting_container']" position="after">
                <div>
                    <h2>Referencia interna automatica</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="product_int_ref_generator" />
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="text-muted">
                                    Generar automaticamente la referencia interna de los productos 
                                </div>
                                <div class ="content-group">
                                    <div class="row mt16">
                                        <label string="Secuencia" for="product_sequence" class="col-lg-3 o_light_label" attrs="{'invisible':[('product_int_ref_generator','=',False)]}"/>
                                        <field name="product_sequence" attrs="{'invisible':[('product_int_ref_generator','=',False)], 'required':[('product_int_ref_generator','!=',False)]}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
